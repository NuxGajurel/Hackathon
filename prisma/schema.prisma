generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Appointment {
  id          String   @id @default(uuid())
  name        String
  email       String
  phone       String
  date        String
  time        String
  symptoms    String
  hospitalId  String
  department  String?
  status      String   @default("PENDING")
  createdAt   DateTime @default(now())
}
